<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base dark theme for the application using AppCompat -->
    <style name="Theme.NokontzzzManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#90CAF9</item>
        <item name="colorPrimaryDark">#1B263B</item>
        <item name="colorAccent">#81C784</item>

        <!-- Background and surface -->
        <item name="android:colorBackground">#0A0E13</item>
        <item name="android:textColorPrimary">#E3E3E3</item>
        <item name="android:textColorSecondary">#BDBDBD</item>

        <!-- System UI -->
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
<!--        <item name="android:navigationBarColor">@android:color/transparent</item>-->
<!--        <item name="android:windowLightStatusBar">false</item>-->
<!--        <item name="android:windowLightNavigationBar">false</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Base Blur Card Style -->
    <style name="BlurCard">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Simplified Blur Card Styles -->
    <style name="BlurCard.Light">
        <item name="android:background">@drawable/blur_card_light</item>
    </style>

    <style name="BlurCard.Medium">
        <item name="android:background">@drawable/blur_card_medium</item>
    </style>

    <style name="BlurCard.Heavy">
        <item name="android:background">@drawable/blur_card_heavy</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?android:attr/colorBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/nkm_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.NokontzzzManager</item>
    </style>
</resources>